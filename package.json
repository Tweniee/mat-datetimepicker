{
  "name": "mat-datetimepicker",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:lib && ng build",
    "build:prod": "npm run build:lib && ng build --configuration production --stats-json",
    "build:lib": "npm run build:lib/core && npm run build:lib/moment && copy-files-from-to --config copy-files.json",
    "build:lib/core": "ng build core --configuration production",
    "build:lib/moment": "ng build moment --configuration production",
    "build:pages": "ng build --base-href=/mat-datetimepicker/ --configuration production",
    "bundle-report": "webpack-bundle-analyzer dist/app/stats.json",
    "lint": "ng lint",
    "publish:pages": "ng deploy",
    "prepare": "husky install",
    "prettier": "prettier \"{,e2e/**/,projects/**/,src/**/}*.{md,java,json,y(a)?ml,html,js,ts,tsx,css,scss}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "start": "ng serve",
    "start:prod": "ng serve --configuration production",
    "test": "ng test",
    "test:watch": "ng test --auto-watch --no-single-run",
    "watch:lib/core": "ng build core --watch",
    "watch:lib/moment": "ng build moment --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.4",
    "@angular/cdk": "^16.2.6",
    "@angular/common": "^17.0.4",
    "@angular/compiler": "^17.0.4",
    "@angular/core": "^17.0.4",
    "@angular/forms": "^17.0.4",
    "@angular/material": "^16.2.6",
    "@angular/material-moment-adapter": "^16.2.6",
    "@angular/platform-browser": "^17.0.4",
    "@angular/platform-browser-dynamic": "^17.0.4",
    "@angular/router": "^17.0.4",
    "copy-files-from-to": "3.9.0",
    "moment": "2.29.4",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.3",
    "@angular-eslint/builder": "16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@angular/cli": "^17.0.3",
    "@angular/compiler-cli": "^17.0.4",
    "@angular/language-service": "^17.0.4",
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.1",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/jasmine": "~4.3.6",
    "@types/jasminewd2": "^2.0.11",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "angular-cli-ghpages": "^1.0.7",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jasmine-core": "~5.1.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "lint-staged": "^14.0.1",
    "ng-packagr": "^17.0.2",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "ts-node": "~10.9.1",
    "typescript": "^5.2.2",
    "webpack-bundle-analyzer": "4.9.1"
  },
  "engines": {
    "node": ">=18.15.0 "
  }
}
